@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

@model List<User>

@{
    bool AddEmployeeSuccess = TempData["AddEmployeeSuccess"] != null && (bool)TempData["AddEmployeeSuccess"];
}

<div class="container">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (AddEmployeeSuccess)
    {

        <script type="text/javascript">
            Swal.fire({
                title: 'User Added Successfully',
                icon: 'success',
                confirmButtonText: 'OK'
            });
        </script>
    }



    <div class="container">
        <div class="row">
            <h3 class="text-center mt-1">Employee Details</h3>
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-3 mt-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h3>@item.Name</h3>
                            <h4></h4>
                            <div class="d-flex justify-content-between align-items-center">
                                <h5>@item.UserName</h5>

                            </div>
                            <h6>User Email : @item.Email</h6>
                            <h6>Project Id : @item.ProjectId</h6>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>