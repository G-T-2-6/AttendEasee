@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

@model List<Project>

@{
    bool addSuccess = TempData["AddProjectSuccess"] != null && (bool)TempData["AddProjectSuccess"];
}

<div class="container">
    @if (addSuccess)
    {

        <script type="text/javascript">
            Swal.fire({
                title: 'Project Added Successfully',
                icon: 'success',
                confirmButtonText: 'OK'
            });
        </script>
    }



    <div class="container">
        <div class="row">
            <h3 class="text-center mt-1">Project Details</h3>
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-3 mt-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h3>@item.Name</h3>
                            <div class="d-flex justify-content-between align-items-center">
                                <h4>@item.Location</h4>

                            </div>
                            <h6>Project Code : @item.ProjectCode</h6>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>