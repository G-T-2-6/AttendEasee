@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

@model IEnumerable<AttendEase.Models.Leave>

@{
    ViewData["Title"] = "ViewLeave";
}

<h1>ViewLeave</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LeaveStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccRejDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccRejDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LeaveId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LeaveId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LeaveId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
