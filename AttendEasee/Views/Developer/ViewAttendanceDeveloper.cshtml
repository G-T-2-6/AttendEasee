@if (Model != null && Model.Count > 0)
{

    <h3 class="d-flex justify-content-center">Attendance for @Model.FirstOrDefault()?.User.Name</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Status</th>
                <th>Action Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.AttendanceStatus</td>
                    <td>@item.AccRejDate?.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No attendance records found for the specified user.</p>
}
